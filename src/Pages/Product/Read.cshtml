@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel

@{
    ViewData["Title"] = "Read page";
}

<h1>Read</h1>



<div class="content">
    <h5 class="title" id="productTitle">Dog Name: @Model.Product.Name</h5>

    <img class="card-img" style="width:400px" src='@Model.Product.Image' alt='Image for @Model.Product.Name'>

    <p class="card-text">Description: @Model.Product.Description</p>

    <p class="card-text">DogType: @Model.Product.DogType</p>
</div>

<br />
<br />

<div class="row">
    <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-primary">Update</a>
</div>
